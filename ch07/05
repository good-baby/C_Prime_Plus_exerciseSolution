#include <stdio.h>
#include "stdbool.h"

int main(){

    printf("input:");
    char ch;
    while ((ch=getchar())!='#'){

        switch (ch) {
            case '.':
                putchar('!');
                break;
            case '!':
                printf("!!");
                break;
            default:
                putchar(ch);
            
        }
    }


}
