#include <stdio.h>
#define DAYS_PER_WEAK 7
int main() {

    printf("Enter days:");
    int days;
    scanf("%d",&days);
    while (days>0){
        printf("%d days are %d weeks,%d days\n",
               days,days/DAYS_PER_WEAK,days%DAYS_PER_WEAK);
        printf("Enter days:");
        scanf("%d",&days);
    }
    printf("done!")
}
